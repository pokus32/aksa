# -*- coding: utf-8 -*-
#:set norm_background_color (0.90,0.89,0.82,1)

<ClientLayout>:
    scroll_layout: scroll_layout
    input_area: input_area
    data_input: data_input
    main_label: main_label
    GridLayout:
        orientation : 'rl-tb'
        cols: 3
        size_hint_y : "1dp"
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                size_hint_y : None
                height : "25dp"
                spacing : "1dp"
                padding : "1dp"
                canvas:
                    Color:
                        rgba: (0, 0.1, 0.25, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                BoxLayout:
                    canvas:
                        Color:
                            rgba: norm_background_color
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        id: main_label
                        font_size: '21dp'
                        color: 0,0,0,1
                        text : u'MUSTERI LITESI'
            GridLayout:
                id: input_area
                size_hint_y: None
                height: self.minimum_height
                rows: 1
                DataInput:
                    id: data_input
            BoxLayout:
                size_hint_y: None
                height: "1dp"
                #pustota
            ScrollView:
                id: scroll_layout
                size_hint : (1, 1)
                do_scroll_x: False
                do_scroll_y: True
            BoxLayout:
                size_hint_y: None
                height: "1dp"

<DataInput>:
    size_hint_y: None
    height: self.minimum_height
    cols: 1
    spacing: "1dp"
    new_button: new_button
    save_button: save_button
    name_input: name_input
    client_name_input: client_name_input
    client_surname_input: client_surname_input
    client_phone_input :client_phone_input
    province_input: province_input
    district_input: district_input
    locality_input: locality_input
    street_input: street_input
    substreet_input: substreet_input
    number_input: number_input
