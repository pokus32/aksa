        size_hint_y: None
        height: "29dp"
        rows: 1
        canvas:
            Color:
                rgba: norm_background_color
            Rectangle:
                size: self.size
                pos: self.pos
        TextInput:
            id: name_input
            text_size : self.size
            halign : "center"
            valign : "middle"
            color: 0,0,0,1
            text : ''
            write_tab: False
    GridLayout:
        size_hint_y: None
        height: "29dp"
        rows: 1
        canvas:
            Color:
                rgba: norm_background_color
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
