<ClientRowLayout>:
    size_hint_y : None
    height : "37dp"
    norm_bg_color: (0.90,0.89,0.82,1)
    client_id: ''
    client_name: ''
    name_lbl: name_lbl
    BoxLayout:
        spacing: "1dp"
        BoxLayout:
            size_hint_x: None
            width: "35dp"
            canvas:
                Color:
                    rgba: root.norm_bg_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            ClicablLabel:
                id: id_lbl
                text_size : self.size
                halign : "center"
                valign : "middle"
                color: 0,0,0,1
                text : root.client_id
        BoxLayout:
            canvas:
                Color:
                    rgba: root.norm_bg_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: ''
                size_hint_x: None
                width: "10dp"
            ClicablLabel:
                id: name_lbl
                data: ()
                text_size : self.size
                halign : "left"
                valign : "middle"
                color: 0,0,0,1
                text : root.client_name
